<UserControl x:Class="WpfApp.Mvvm.Views.ContactEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.Mvvm.Views"
             
             xmlns:viewmodels="clr-namespace:WpfApp.Mvvm.ViewModels"
             xmlns:models="clr-namespace:Shared.Models;assembly=Shared"
             
             d:DataContext="{d:DesignInstance Type=viewmodels:ContactEditViewModel}"
                       
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <StackPanel>
            <Label Content="Activity:" Foreground="Gray" />
            <TextBox Text="{Binding Contact.firstName}" Padding="2, 5" />
            <Button Content="Save" Command="{Binding EditContactCommand}" Padding="5" Margin="0,15" />
        </StackPanel>
    </Grid>
</UserControl>
